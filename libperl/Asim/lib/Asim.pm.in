################################################################


=item Asim: open();

Open a default workspace.

=cut

################################################################

sub open {
  my $workspacedir = shift;
  my $workspace;

  $workspace = Asim::Workspace->new($workspacedir)
    || return undef;

  $workspace->upgrade();

  $ENV{AWBLOCAL} = $workspace->rootdir();

  $Asim::default_workspace = $workspace;

  return 1;
}

