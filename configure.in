        dnl Configuring AGT defines

        case $host in
        alpha*) 
       	    X_EXTRA_LIBS="-lXext -lX11" ;;
        i?86*)
	    X_EXTRA_LIBS="-ldl -lGL -lXext -lX11 -lXinerama -lXrender" ;;
        ia64*)
